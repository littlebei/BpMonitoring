<?xml version="1.0" encoding="utf-8"?>
	<!-- 该文件是OtherActivity.java文件所使用的布局文件 -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
	    >
	    
		<LinearLayout
	        android:focusable="true" 
	        android:focusableInTouchMode="true"
	        android:layout_width="0px"
	        android:layout_height="0px"
        />
		    
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_mac_addr"  
	        android:background="#000000"
	        android:textColor="#00ff00"            
            android:textSize="28sp"/>
        
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_char_uuid"
            android:background="#000000"
	        android:textColor="#00ff00"           
            android:textSize="16sp"/>
                            
	    <LinearLayout  
	        android:orientation="horizontal"      
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        <ToggleButton
	            android:id="@+id/togglebutton_collection_onoff"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            
				android:checked="true"
	        	android:textOff="采集暂停"
	        	android:textOn="采集开始"
	        	android:textSize="24sp"    
	        	android:textStyle="bold"      
	        	android:layout_weight="1"      
	            />
	        
	        <ToggleButton
	            android:id="@+id/togglebutton_wave_onoff"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            
				android:checked="true"
	        	android:textOff="波形关"
	        	android:textOn="波形开"
	        	android:textSize="24sp"    
	        	android:textStyle="bold"      
	        	android:layout_weight="1"      
	            />
	                
	        <Button
	            android:id="@+id/button_clear"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="24sp"
	            android:text="清除数据" 
	            android:textStyle="bold"      
	            android:layout_weight="1" 
	            />
	        
	    </LinearLayout>
    	 	
        <Space android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        
		<ScrollView 
			android:layout_weight="2"    
			android:layout_width="fill_parent"    
			android:layout_height="wrap_content"   
			android:background="#000000"
			android:textColorHint="#238745"        
			android:id="@+id/scroll"    
	    >            
	        <TextView android:id="@+id/device_address"
	            android:layout_weight= "2"  
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColorHint="#238745"  
				android:ellipsize="start"
				android:maxLines="10000"
				android:maxLength = "100000" 				
				android:scrollHorizontally="true"
				android:singleLine="false" 
				android:fadeScrollbars="false"				
				android:scrollbars="vertical"
	            android:textSize="24sp"     
	            android:textColor="#00ff00"
	            android:textStyle="bold"  
	            />
        
		</ScrollView>

	<LinearLayout
		android:orientation="vertical"
		android:background="#000000"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<LinearLayout
			android:orientation="horizontal"
			android:background="#000000"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#000000"
				android:text="血压值："
				android:textColor="#00ff00"
				android:textSize="28sp"/>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:id="@+id/BloodPressure"
				android:background="#000000"
				android:text="xxxx"
				android:textColor="#00ff00"
				android:textSize="28sp"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:background="#000000"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#000000"
				android:text="心率值："
				android:textColor="#00ff00"
				android:textSize="28sp"/>
			<TextView android:layout_width="wrap_content"
				android:id="@+id/HeartRate"
				android:layout_height="wrap_content"
				android:background="#000000"
				android:text="xxxx"
				android:textColor="#00ff00"
				android:textSize="28sp"/>
		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		        android:orientation="horizontal"      
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >
		                
		        <Button
		            android:id="@+id/button_about"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textSize="24sp"
		            android:text="帮助" 
		            android:textStyle="bold"      
		            android:layout_weight="2" 
		            />
		        
		        <Button
		            android:id="@+id/button_detail"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textSize="24sp"
		            android:text="详情" 
		            android:textStyle="bold"      
		            android:layout_weight="2" 
		            />
		        		        
			 	<Button  
			        android:id="@+id/button_calibrate"
			        android:layout_width="fill_parent"  
			        android:layout_height="wrap_content"
			        android:textSize="28sp"  
			        android:text="标定或校准"
			        android:textStyle="bold"      
			        android:layout_weight="1" 
			        />          
		    </LinearLayout>		
				

	        
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#000000"
	            android:textColor="#00ff00"
	            android:gravity="center"
	            android:textStyle="bold"      
	            android:text="无创连续血压测量"
	            android:textSize="30sp"/>
	        
	        
		</LinearLayout>

		
		